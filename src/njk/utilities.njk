{% macro icon_link(id) %}
<a class="icon-link icon-link--{{id}}" href="{{ DATA.contactLinks[id].href }}">
    <span class="icon-link__text">{{ DATA.contactLinks[id].text }}</span>
</a>
{% endmacro %}

{% macro gallery(key) %}
<div class="gallery__images">
    {% for image in DATA.gallery.images[key] %}
        <div class="gallery__image-container">
            <img class="gallery__image" loading="lazy" src="{{image.src}}" alt="{{image.alt}}" {{image.sizeAttrs}}>
        </div>                
    {% endfor %}
</div>
{% endmacro %}